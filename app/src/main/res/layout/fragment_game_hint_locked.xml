<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_dialog_hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorModalBackground">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Hint ?"
        android:id="@+id/game_dialog_title_lockedhint"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/game_dialog_imageview_lockedhint"
        android:src="@drawable/hint_unlock"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:gravity="center_vertical"
        android:id="@+id/game_dialog_button_lockedhint"
        android:background="@color/colorModalBackground"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="bottom|right"
        android:textAlignment="center" />

</LinearLayout>
